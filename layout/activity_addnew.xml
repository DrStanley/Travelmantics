<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stanleyj.android.travelmantics.AddnewActivity">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/Add_title"
        app:met_floatingLabel="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_border_color_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Title"
        android:inputType="textAutoCorrect|textAutoComplete|textCapSentences|textMultiLine"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="#000" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/Add_price"
        app:met_floatingLabel="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_border_color_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Price"
        android:inputType="number"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="#000" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/Add_description"
        app:met_floatingLabel="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_border_color_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Description"
        android:inputType="textAutoCorrect|textAutoComplete|textCapSentences|textMultiLine"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="#000" />
    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/back4"
        android:contentDescription="@string/done"
        android:gravity="center"
        android:padding="5dp"
        android:text="Upload Image"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp" />
</LinearLayout>
